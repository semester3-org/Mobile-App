<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookingBottomRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_bottom_sheet_handle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBookingTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Booking now"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnCloseBookingSheet"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSheetKosName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Kos Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSheetKosPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp 1.800.000/Bulan"
        android:textColor="#008000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvSheetKosAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Alamat kos"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipe Booking"
        android:textSize="13sp" />

    <Spinner
        android:id="@+id/spinnerBookingType"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_spinner" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tanggal Check-in"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvCheckInDate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_spinner"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="dd/mm/yyyy" />

    <TextView
        android:id="@+id/tvDurationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Durasi (bulan)"
        android:textSize="13sp" />

    <Spinner
        android:id="@+id/spinnerDuration"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_spinner" />

    <TextView
        android:id="@+id/tvTotalPricePreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Total: Rp 0"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConfirmBooking"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Konfirmasi &amp; Booking" />


</LinearLayout>
