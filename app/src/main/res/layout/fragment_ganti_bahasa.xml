<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_lang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/tvLangTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Bahasa"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        android:textColor="#1B5E20" />

    <!-- Card : Bahasa Indonesia -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_bahasa_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="10dp"
        android:layout_marginBottom="12dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahasa Indonesia"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

                <TextView
                    android:id="@+id/tv_id_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengaturan bahasa aplikasi"
                    android:textSize="12sp"
                    android:paddingTop="4dp"
                    android:textColor="#777777" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:buttonTint="#2E7D32"
                android:checked="true" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card : English -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_bahasa_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="10dp"
        android:layout_marginBottom="12dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_en_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

                <TextView
                    android:id="@+id/tv_en_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App language"
                    android:textSize="12sp"
                    android:paddingTop="4dp"
                    android:textColor="#777777" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:buttonTint="#2E7D32"
                android:checked="false" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
