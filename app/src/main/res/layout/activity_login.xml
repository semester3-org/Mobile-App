<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Hijau -->
        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_header_curve" />

        <!-- Logo bundar -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_circle"
            android:src="@drawable/ic_logo" />

        <!-- Nama App -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Koshub"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <!-- Welcome text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appName"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Welcome Back!"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Input -->
        <TextView
            android:id="@+id/subText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Sign in to continue to your account"
            android:textColor="@color/primaryGreen"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/subText"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            android:hint="Email"
            android:background="@drawable/input_underline"
            android:padding="8dp"
            android:inputType="textEmailAddress"
            tools:ignore="TouchTargetSizeCheck"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/email"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            android:hint="Password"
            android:background="@drawable/input_underline"
            android:padding="8dp"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck"/>

        <!-- Remember + Forgot -->
        <LinearLayout
            android:id="@+id/rememberForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Remember me"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/primaryGreen"/>
        </LinearLayout>

        <!-- Tombol Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/rememberForgot"
            android:layout_margin="24dp"
            android:background="@drawable/btn_rounded"
            android:text="Login"
            android:textColor="@color/white" />

        <!-- OR -->
        <TextView
            android:id="@+id/orText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogin"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="or"/>

        <!-- Social Login -->
        <LinearLayout
            android:id="@+id/socialLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orText"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/btn_circle"
                android:src="@drawable/ic_google"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/btn_circle"
                android:src="@drawable/ic_facebook"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/btn_circle"
                android:src="@drawable/ic_apple"/>
        </LinearLayout>

        <!-- Register -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/socialLogin"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Donâ€™t have account? Create one!"
            android:textSize="14sp"/>
    </RelativeLayout>
</ScrollView>
