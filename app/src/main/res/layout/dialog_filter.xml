<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutFilterRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <!-- Sheet container -->
    <LinearLayout
        android:id="@+id/containerSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_filter_sheet">

        <!-- Drag handle -->
        <View
            android:id="@+id/dragHandle"
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#C8E6C9"
            android:layout_marginBottom="12dp"
            android:alpha="0.9" />

        <!-- Title + Close -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvFilterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Filter Pencarian"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111" />

            <ImageView
                android:id="@+id/ivCloseFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                android:padding="4dp" />
        </RelativeLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Harga -->
                <TextView
                    android:id="@+id/tvHargaTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga (Perbulan)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_marginTop="4dp" />

                <!-- Min / Max card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:id="@+id/layoutMinHarga"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/bg_price_box"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min Harga"
                            android:textSize="11sp"
                            android:textColor="#777777" />

                        <EditText
                            android:id="@+id/etMinHarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:hint="Min Harga"
                            android:textSize="14sp"
                            android:textColor="#222222"
                            android:textStyle="bold"
                            android:background="@drawable/bg_price_box"
                            android:padding="10dp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMaxHarga"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_price_box"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max Harga"
                            android:textColor="#777777"
                            android:textSize="11sp" />

                        <EditText
                            android:id="@+id/etMaxHarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:hint="Max Harga"
                            android:textSize="14sp"
                            android:textColor="#222222"
                            android:textStyle="bold"
                            android:background="@drawable/bg_price_box"
                            android:padding="10dp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#E0E0E0" />

                <!-- Jumlah Kamar -->
                <TextView
                    android:id="@+id/tvJumlahKamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Jumlah Kamar"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <LinearLayout
                    android:id="@+id/layoutJumlahKamar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/btnKamar1"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="1" />

                    <TextView
                        android:id="@+id/btnKamar2"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="2"
                        android:layout_marginStart="6dp" />

                    <TextView
                        android:id="@+id/btnKamar3"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="3"
                        android:layout_marginStart="6dp" />

                    <TextView
                        android:id="@+id/btnKamar4Plus"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="4+"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#E0E0E0" />

                <!-- Fasilitas -->
                <LinearLayout
                    android:id="@+id/rowFasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_facility" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Fasilitas"
                        android:textSize="14sp"
                        android:textColor="#222222" />

                    <ImageView
                        android:id="@+id/ivFasilitasToggle"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_up" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFasilitasContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/chipWifi"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="WiFi"
                        android:textSize="10dp"/>

                    <TextView
                        android:id="@+id/chipAc"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="AC" />

                    <TextView
                        android:id="@+id/chipKmDalam"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="KM Dalam"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/chipMeja"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Meja"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/chipLemari"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Lemari"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0" />

                <!-- Jenis Kos -->
                <LinearLayout
                    android:id="@+id/rowJenisKos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_home" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Jenis Kos"
                        android:textSize="14sp"
                        android:textColor="#222222" />

                    <ImageView
                        android:id="@+id/ivJenisKosToggle"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_up" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutJenisKosContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/btnPutra"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="7dp"
                        android:text="Putra"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/btnPutri"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Putri" />

                    <TextView
                        android:id="@+id/btnCampur"
                        android:background="@drawable/bg_filter_chip_outline"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Campur" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/btnResetFilter"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Reset"
                android:textSize="14sp"
                android:textColor="#27AE60"
                android:background="@drawable/bg_btn_reset" />

            <TextView
                android:id="@+id/btnTerapkanFilter"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Terapkan Filter"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn_apply" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
