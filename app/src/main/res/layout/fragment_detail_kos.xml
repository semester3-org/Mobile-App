<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_detail_kos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top bar: back + favorite -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:padding="6dp"
                android:src="@drawable/ic_arrow_back" />

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:padding="6dp"
                android:src="@drawable/ic_favorite_border" />
        </RelativeLayout>

        <!-- ✅ Slider Foto (ViewPager2) -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpKosPhotos"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:background="@android:color/darker_gray" />

        <!-- ✅ Dot indicator (TabLayout) -->
        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />


        <!-- Tag kategori -->
        <TextView
            android:id="@+id/tvKategoriKos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"
            android:text="Kos Putri"
            android:textSize="12sp"
            android:textColor="#1B5E20"
            android:background="@drawable/bg_chip_green" />

        <!-- Nama Kos -->
        <TextView
            android:id="@+id/tvNamaKos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Kos Quenn Seven"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <!-- Rating -->
        <LinearLayout
            android:id="@+id/layoutRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.0"
                android:isIndicator="true"
                android:progressTint="#FFC107" />

            <TextView
                android:id="@+id/tvRatingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.0 (30 Reviews)"
                android:textSize="12sp"
                android:textColor="#777777" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#E0E0E0" />

        <!-- Deskripsi Title -->
        <TextView
            android:id="@+id/tvDeskripsiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Properti"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <!-- Deskripsi Isi -->
        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ini Deskripsi"
            android:textSize="13sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/tvReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Baca Selengkapnya"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#1B5E20" />

        <!-- Fasilitas Title -->
        <TextView
            android:id="@+id/tvFasilitasTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Fasilitas"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <!-- ✅ Fasilitas dinamis (ChipGroup) -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFacilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleLine="false"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp" />

        <!-- Lokasi Title -->
        <TextView
            android:id="@+id/tvLokasiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lokasi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <!-- Alamat -->
        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Jl. Kalimantan 26-20, Krajan Timur, Sumbersari, Jember"
            android:textSize="13sp"
            android:textColor="#555555" />

        <!-- ✅ MAP INTERAKTIF -->
        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="8dp" />

        <!-- Bottom: Harga -->
        <LinearLayout
            android:id="@+id/layoutBottomPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvHargaPerbulan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Harga Perbulan"
                android:textSize="12sp"
                android:textColor="#777777" />

            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.800.000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- ✅ Tombol Booking -->
        <Button
            android:id="@+id/btnBooking"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Booking Sekarang"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_green_light" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
